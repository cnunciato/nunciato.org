{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,

    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.turbo": true,
        "**/.astro": true,
        "**/dist": true
        // "**/node_modules": true
    },

    "prettier.configPath": "./prettier.config.json",
    "prettier.documentSelectors": ["**/*.{ts,js,cjs,mjs,json,md,astro,mdx}"]
}
