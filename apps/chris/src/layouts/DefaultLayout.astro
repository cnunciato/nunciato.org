---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = {
    title: string;
    description: string;
    canonical?: string;
    image?: string;
    video?: string;
    audio?: string;
};

const { title, description, canonical, image, video, audio } = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead
            title={title}
            description={description}
            canonical={canonical}
            image={image}
            video={video}
            audio={audio}
        />
    </head>
    <body>
        <Header />
        <main class="container mx-auto">
            <slot />
        </main>
        <Footer />
    </body>
</html>
