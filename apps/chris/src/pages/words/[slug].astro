---
import { getCollection } from "astro:content";
import BlogPost from "../../layouts/BlogPost.astro";
import FormattedDate from "../../components/FormattedDate.astro";

export async function getStaticPaths() {
    const words = await getCollection("words");

    return words.map(post => ({
        params: {
            slug: post.slug,
        },
        props: { post: post },
    }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BlogPost title={post.data.title} description={post.data.description} date={post.data.date}>
    <div class="mx-auto max-w-4xl bg-white shadow-lg p-16 rounded-lg">
        <h1>{post.data.title}</h1>
        <FormattedDate date={post.data.date} />
        <Content />
    </div>
</BlogPost>
