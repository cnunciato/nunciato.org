---
import { frontmatter, Content } from "../content/pages/about.md";
import Prose from "../components/Prose.astro";
import DefaultLayout from "../layouts/DefaultLayout.astro";

const { title, description } = frontmatter;
---

<DefaultLayout title={title} description={description}>
    <Prose>
        <div class="mx-auto max-w-4xl bg-white shadow-lg p-8 lg:p-16 rounded-lg">
            <img
                class="mt-0 md:float-right md:w-80 md:ml-2 md:mb-2"
                src="/media/images/cascadia-smile.jpg"
                alt="Me giving a programming talk at Town Hall Seattle, 2019"
            />
            <h1>{title}</h1>
            <Content />
        </div>
    </Prose>
</DefaultLayout>
