#!/usr/bin/env bash

set -euo pipefail

# echo "Installing Mise..."
export MISE_INSTALL_PATH="$(pwd)/tools/mise"
export MISE_DATA_DIR="${MISE_INSTALL_PATH}"
export MISE_CONFIG_DIR="${MISE_INSTALL_PATH}"
export MISE_CACHE_DIR="${MISE_INSTALL_PATH}/cache"
export PATH="${MISE_INSTALL_PATH}/bin:$PATH"
echo $PATH
curl https://mise.run | sh
tree $MISE_INSTALL_PATH

# echo "Installing Mise-managed tooling..."
mise install

export PATH="$(mise where node)/bin:$PATH"
which node
node -v
